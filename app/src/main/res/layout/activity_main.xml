<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="0dp"

    android:background="@color/primaryLightColor">


    <EditText
        android:id="@+id/cpWeight"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/CP"
        android:textAlignment="center"
        android:textColorHint="@color/colorPrimaryDark"
        android:ems="10"
        android:inputType="phone"
        android:textColor="@color/primaryTextColor"
        android:textSize="20sp"
        android:hint="Weight"
         />

    <EditText
        android:id="@+id/ORMWeight"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/OneRepMax"
        android:ems="10"
        android:hint="Weight"
        android:inputType="phone"
        android:textAlignment="center"
        android:textColor="@color/primaryTextColor"
        android:textColorHint="@color/colorPrimaryDark"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/weightInKg"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/converter"
        android:textAlignment="center"
        android:textColorHint="@color/colorPrimaryDark"
        android:ems="10"
        android:textColor="@color/primaryTextColor"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:hint="Weight in Kg"
        android:inputType="phone" />

    <EditText
        android:id="@+id/percentageText"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/CP"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textColorHint="@color/colorPrimaryDark"
        android:ems="10"
        android:textColor="@color/primaryTextColor"
        android:textSize="20sp"
        android:hint="Percentage"
        android:inputType="number" />

    <EditText
        android:id="@+id/calorieInput"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/calories"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textColorHint="@color/colorPrimaryDark"
        android:ems="10"
        android:textColor="@color/primaryTextColor"
        android:textSize="20sp"
        android:hint="Kilojules"
        android:inputType="number" />

    <EditText
        android:id="@+id/Reps"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/OneRepMax"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Reps"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="@color/primaryTextColor"
        android:textColorHint="@color/colorPrimaryDark"
        android:textSize="20sp" />

    <Button
        android:id="@+id/submit"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/CP"
        android:layout_alignParentRight="true"
        android:background="@color/colorPrimary"
        android:text="Submit" />

    <Button
        android:id="@+id/submitCC"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/calories"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@color/colorPrimary"
        android:text="Submit" />

    <Button
        android:id="@+id/submit1"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@color/colorPrimary"
        android:layout_below="@id/converter"
        android:text="Submit" />

    <Button
        android:id="@+id/submit2"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/OneRepMax"
        android:layout_alignParentEnd="true"
        android:background="@color/colorPrimary"
        android:layout_alignParentRight="true"
        android:text="Submit" />

    <TextView
        android:id="@+id/KGresult"
        android:layout_width="240dp"
        android:layout_height="100dp"
        android:layout_below="@id/tvTimer"
        android:textStyle="bold"
        android:layout_marginTop="80dp"
        android:textAlignment="center"

        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="80sp" />

    <TextView
        android:id="@+id/LBresult"
        android:layout_width="240dp"
        android:layout_height="100dp"
        android:layout_below="@id/tvTimer"
        android:layout_marginTop="5dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="80sp" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:layout_below="@id/btPause"
        android:scaleY="1.3"
        android:scaleX="1.3"
        android:layout_marginTop="155dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/barbell" />

    <TextView
        android:id="@+id/CP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_below="@id/weightInKg"
        android:textColor="@color/primaryTextColor"
        android:text="Calculate Percentage" />

    <TextView
        android:id="@+id/stopwatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/percentageText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="Stopwatch"
        android:textColor="@color/primaryTextColor"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/stopwatch3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/percentageText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="Stopwatch"
        android:textColor="@color/primaryTextColor"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/percentageText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Calorie Converter"
        android:textColor="@color/primaryTextColor"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/converter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_below="@id/Reps"
        android:textStyle="bold"
        android:textColor="@color/primaryTextColor"
        android:text="Weight Converter" />

    <TextView
        android:id="@+id/OneRepMax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:text="One Rep Max"
        android:textColor="@color/primaryTextColor"
        android:textSize="20dp" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@id/converter"
        android:layout_marginTop="10dp"
        android:scaleY="2"
        android:scaleX="2"

        android:layout_marginLeft="30dp"
        android:textOff="KG"
        android:switchMinWidth="50dp"
        android:showText="true"
        android:textOn="Lb"
         />

    <Switch
        android:id="@+id/switch2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@id/converter"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="179dp"
        android:scaleX="2"

        android:scaleY="2"
        android:showText="true"
        android:switchMinWidth="50dp"
        android:textOff="Kj"
        android:textOn="C" />

    <TextView
        android:id="@+id/tvTimer"
        android:layout_width="wrap_content"
        android:layout_height="111dp"
        android:layout_below="@id/btPause"
        android:layout_centerHorizontal="true"
        android:text="00:00:00"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="100sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:visibility="visible" />

    <Button
        android:id="@+id/btStart"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_below="@+id/stopwatch"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:text="Start" />

    <Button
        android:text="Pause"
        android:background="@color/colorPrimary"
        android:id="@+id/btPause"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/stopwatch"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Reset"
        android:textSize="20sp"
        android:background="@color/colorPrimary"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/btPause"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:id="@+id/btReset" />

</RelativeLayout>

