<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="0dp"

    android:background="#404040">


    <EditText
        android:id="@+id/weight"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/CP"
        android:textAlignment="center"
        android:textColorHint="#FFFFFF"
        android:ems="10"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:hint="Weight"
        android:inputType="phone" />

    <EditText
        android:id="@+id/weight1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/converter"
        android:textAlignment="center"
        android:textColorHint="#FFFFFF"
        android:ems="10"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:hint="Weight"
        android:inputType="phone" />

    <EditText
        android:id="@+id/percentageText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/CP"
        android:layout_alignParentRight="true"
        android:textAlignment="center"
        android:textColorHint="#FFFFFF"
        android:ems="10"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:hint="Percentage"
        android:inputType="phone" />

    <Button
        android:id="@+id/submit"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/percentageText"
        android:text="Submit" />

    <Button
        android:id="@+id/submit1"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/converter"
        android:text="Submit" />

    <TextView
        android:id="@+id/result"
        android:layout_width="230dp"
        android:layout_height="100dp"
        android:layout_marginTop="120dp"
        android:layout_below="@id/weight1"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/buttonPressed"
        android:textSize="60sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/submit"
        android:layout_marginTop="200dp"
        app:srcCompat="@drawable/barbell" />



    <TextView
        android:id="@+id/CP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@id/submit"
        android:layout_marginTop="3dp"
        android:textSize="15dp"
        android:textColor="@color/buttonPressed"
        android:text="Calculate Percentage" />

    <TextView
        android:id="@+id/converter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/submit"
        android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:layout_centerInParent="true"
        android:layout_alignLeft="@id/submit"
        android:textColor="@color/buttonPressed"
        android:text="Weight Converter" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/buttonPressed"
        android:layout_alignTop="@id/weight1"
        android:layout_marginTop="10dp"
        android:scaleY="2"
        android:scaleX="2"

        android:layout_marginLeft="30dp"
        android:textOff="KG"
        android:switchMinWidth="50dp"
        android:showText="true"
        android:textOn="PD"
         />

</RelativeLayout>

